<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>

<VBox
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="cz.jaktoviditoka.projectmagellan.controller.MainController"
    fx:id="root"
    prefHeight="900"
    prefWidth="1600">
    <children>
        <HBox
            fx:id="menu"
            styleClass="menu">
            <children>
                <Button
                    fx:id="dashboardButton"
                    styleClass="menu-button"
                    text="DASHBOARD"
                    onAction="#dashboardContent" />
                <Button
                    fx:id="devicesButton"
                    styleClass="menu-button"
                    text="DEVICES"
                    onAction="#devicesContent" />
            </children>
        </HBox>
        <BorderPane
            fx:id="content"
            VBox.vgrow="ALWAYS" />
    </children>
</VBox>

