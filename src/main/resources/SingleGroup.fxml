<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.ColorAdjust?>
<?import org.controlsfx.glyphfont.Glyph?>
<?import javafx.scene.layout.Border?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane
    xmlns:fx="http://javafx.com/fxml"
    fx:id="root"
    fx:controller="cz.jaktoviditoka.projectmagellan.controller.SingleGroupController"
    styleClass="paired-device"
    onMouseClicked="#selectGroup">

    <border>
        <Border />
    </border>
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" />
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="NEVER" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="33" />
        <RowConstraints percentHeight="34" />
        <RowConstraints percentHeight="33" />
    </rowConstraints>
    <ImageView
        fx:id="icon"
        GridPane.rowIndex="0"
        GridPane.columnIndex="0"
        GridPane.rowSpan="3"
        GridPane.columnSpan="1"
        GridPane.margin="10"
        image="image/group-icon"
        fitWidth="64"
        preserveRatio="true"
        smooth="true">
        <effect>
            <ColorAdjust
                hue="60"
                saturation="100"
                brightness="100" />
        </effect>
    </ImageView>
    <TextField
        fx:id="name"
        GridPane.rowIndex="0"
        GridPane.columnIndex="1"
        GridPane.rowSpan="3"
        GridPane.columnSpan="1"
        GridPane.margin="5"
        styleClass="paired-device-name"
        text="New group"
        disable="true" />
    <Button
        fx:id="deleteGroupButton"
        styleClass="button-icon"
        GridPane.valignment="TOP"
        onAction="#deleteGroup">
        <Label>
            <graphic>
                <Glyph
                    fontFamily="FontAwesome"
                    icon="TRASH"
                    textFill="RED" />
            </graphic>
        </Label>
    </Button>
    <Button
        fx:id="confirmRenameGroupButton"
        styleClass="button-icon"
        visible="false"
        GridPane.valignment="CENTER"
        onAction="#confirmRenameGroup">
        <Glyph
            fontFamily="FontAwesome"
            icon="CHECK"
            textFill="LAWNGREEN" />
    </Button>
    <Button
        fx:id="renameGroupButton"
        styleClass="button-icon"
        GridPane.valignment="BOTTOM"
        onAction="#renameGroupButton">
        <Glyph
            fontFamily="FontAwesome"
            icon="PENCIL"
            textFill="DEEPSKYBLUE" />
    </Button>
</GridPane>

